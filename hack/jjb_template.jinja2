---
- job:
    name: {{ JOB_NAME }}
    project-type: pipeline
    triggers:
      - timed: {% if 'daily-ocp4.16-powervs-script-p9-min' in JOB_NAME %}"0 06 * * 1,3,5 "
        {% elif 'daily-ocp4.15-powervs-script-p9-min' in JOB_NAME %}"0 06 * * 2 "
        {% elif 'daily-ocp4.14-powervm-p9-min' in JOB_NAME %}"00 05 * * * "
        {% elif 'daily-ocp4.15-powervm-p9-min' in JOB_NAME %}"00 01 * * * "
        {% elif 'daily-ocp4.16-powervm-p9-min' in JOB_NAME %}"00 00 * * * "

        {% elif 'weekly-ocp4.12-to-4.13-powervm-p9-min-upgrade' in JOB_NAME %}"00 09 * * 4 "
        {% elif 'weekly-ocp4.13-to-4.14-powervm-p9-min-upgrade' in JOB_NAME %}"00 09 * * 3 "
        {% elif 'weekly-ocp4.14-to-4.15-powervm-p9-min-upgrade' in JOB_NAME %}"00 09 * * 2 "
        {% elif 'weekly-ocp4.15-to-4.16-powervm-p9-min-upgrade' in JOB_NAME %}"00 09 * * 1 "

        {% elif 'weekly-ocp4.13-powervm-p9-min' in JOB_NAME %}"00 16 * * 7 "
        {% elif 'weekly-ocp4.14-powervm-p9-sdn-min' in JOB_NAME %}"00 16 * * 3 " 
        {% elif 'weekly-ocp4.16-powervm-p9-vscsi-multipath' in JOB_NAME %}"00 16 * * 1 "
        {% elif 'weekly-ocp4.15-powervm-p9-verification' in JOB_NAME %}"00 09 * * 6 "
        {% elif 'weekly-ocp4.16-powervm-p9-verification' in JOB_NAME %}"00 09 * * 5 "
        {% elif 'weekly-ocp4.16-powervm-p9-sriov' in JOB_NAME %}"00 16 * * 4 "

        {% elif 'daily-ipi4.16-powervs-frankfurt1' in JOB_NAME %}"0 0 * * * "
        {% elif 'daily-ipi4.16-powervs-washingtondc06' in JOB_NAME %}"0 0 * * * "
        {% elif 'daily-ipi4.16-powervs-saopaulo04' in JOB_NAME %}"0 2 * * * "
        {% elif 'daily-ipi4.16-powervs-madrid02' in JOB_NAME %}"0 2 * * * "
        {% elif 'daily-ipi4.16-powervs-frankfurt2' in JOB_NAME %}"0 4 * * * "
        {% elif 'daily-ipi4.16-powervs-washingtondc07' in JOB_NAME %}"0 4 * * * "
        {% elif 'daily-ipi4.16-powervs-madrid04' in JOB_NAME %}"0 6 * * 2-6 "

        {% elif 'mirror-openshift-release' in JOB_NAME %}"@hourly"
        {% elif 'poll-powervc-images' in JOB_NAME %}"@daily"
        {% elif 'poll-powervs-images' in JOB_NAME %}"@daily"
        {% else %}""
        {% endif %}
    sandbox: true
    concurrent: true
    properties:
      - copyartifact:
          projects: "*"
      {% if 'mirror-openshift-release' in JOB_NAME %}
      - build-discarder:
          num-to-keep: 200
          artifact-num-to-keep: 200
      {% elif 'daily-ipi' in JOB_NAME %}
      - build-discarder:
          num-to-keep: 30
          artifact-num-to-keep: 30
      {% else %}
      - build-discarder:
          num-to-keep: 30
          artifact-num-to-keep: 30
      {% endif %}
    pipeline-scm:
      scm:
        - git:
            url: https://github.com/ppc64le-cloud/jenkins-infra.git
            branches:
              - master
            credentials-id: github
            clean: true
      script-path: {{ JENKINS_FILE }}
